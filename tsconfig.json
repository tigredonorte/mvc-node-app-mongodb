{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [ "node" ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
  },
  "ts-node": {
    "swc": true
  },
  "exclude": ["./node_modules"]
}

<%- include ("../../../../template/main") %>

<main>
  <% if(hasProducts) { %>
    <div class="container row">
      <% products.forEach((product, index) => { %>
        <article class="col-4" style="padding: 5px;">
          <div class="card"><img class="card-img-top" src="<%- product.image %>" />
            <div class="card-body">
              <h2 class="card-subtitle text-muted mb-2"><%- product.title %></h2>
              <h1 class="card-title">R$ <%- product.price %></h1>
              <p class="card-tex"><%- product.description %></p>
              <div class="row">
                <div class="mb-2"><a class="btn btn-primary start-50">Add to cart</a></div>
                <div class="mb-2"><a class="btn btn-primary start-50" href="/shop/edit/<%- product.id %>">Edit</a></div>
                <div class="mb-2"><a class="btn btn-primary start-50" href="/shop/delete/<%- product.id %>">Delete</a></div>
              </div>
            </div>
          </div>
        </article>
      <% }) %>
    </div>
  <% } else { %>
    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
      <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-6 fw-normal">We don't have products yet</h1>
        <p class="lead fw-normal">Come back latter to our store. You will find amazing products soon</p><button
          class="btn btn-outline-secondary">Coming soon</button>
      </div>
    </div>
  <% } %>
</main>

<%- include ("../../../../template/footer") %>
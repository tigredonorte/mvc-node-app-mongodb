<%- include ("../../../../template/main") %> <%- include ("../../../../template/menu") %>

<main>

  <div class="row">
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Your cart</span>
        <span class="badge badge-secondary badge-pill">3</span>
      </h4>
      <ul class="list-group mb-3">
        <% cart.products.forEach(c => { %>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0"><%- c.product.title %></h6>
              <small class="text-muted"><%- c.product.description %></small>
            </div>
            <span class="text-muted">R$ <%- c.total %></span>
          </li>
          <% }) %>
      </ul>
      <button class="btn btn-dark btn-block btn-lg" onclick="processOrder('<%- stripeKey %>', '<%- sessionId %>')">Order now</button>
    </div>
</main>

<script src="https://js.stripe.com/v3/" type="text/javascript"></script>
<script src="/js/orders.js" type="text/javascript"></script>


<%- include ("../../../../template/main") %> <%- include ("../../../../template/menu") %>

<main class="card">
  <form class="col-md-5 p-lg-5 mx-auto my-5" method="POST" action="/auth/changePassword/<%- hash %>">
    <div class="mb-3">
      <label class="form-label" for="price">Password</label>
      <input class="form-control" type="password" placeholder="Password" name="password" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="price">Confirm Password</label>
      <input class="form-control" type="password" placeholder="Confirm Password" name="confirm_password" />
    </div>
    <input type="hidden" value="<%- csrfToken %>" name="_csrf" />
    <button class="btn btn-primary start-50" type="submit">Recover</button>
  </form>
</main>


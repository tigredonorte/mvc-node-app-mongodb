<%- include ("../../../../template/main") %> <%- include ("../../../../template/menu") %>

<main class="card">
  <form class="col-md-5 p-lg-5 mx-auto my-5" method="POST" action="/auth/reset/<%- hash %>">
    <%-
      include("../../../../template/input", {
        field: { name: 'password', label: "Password", type: 'password', placeholder: "Password" }
      })
    %>
    <%-
      include("../../../../template/input", {
        field: {
          name: 'confirm_password', label: "Confirm Password", type: 'password', placeholder: "Confirm Password"
        }
      })
    %>
    <input type="hidden" value="<%- csrfToken %>" name="_csrf" />
    <button class="btn btn-primary start-50" type="submit">Recover</button>
  </form>
</main>

<%- include ("../../../../template/footer") %>
